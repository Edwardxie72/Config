set number
set hlsearch
set autoindent
set wrap
set ignorecase
set showmatch

syntax on
colo torte

set shiftwidth=4
set softtabstop=4
set expandtab

set colorcolumn=81

nnoremap k gk
nnoremap j gj

" Automatically set current dir
set autochdir

" Ctrl+v before { to avoid this remap
inoremap { {<CR>}<Esc>ko<tab>

" Cmder Emulator specific, makes normal mode have block highlighting
let &t_SI = "\<Esc>[6 q"
let &t_SR = "\<Esc>[4 q"
let &t_EI = "\<Esc>[2 q"
set ttimeout
set ttimeoutlen=1
set listchars=tab:>-,trail:~,extends:>,precedes:<,space:.
set ttyfast
