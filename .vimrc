set number
set hlsearch
set autoindent
set wrap
set ignorecase
set showmatch

syntax on
colo torte

set shiftwidth=4
set softtabstop=4
set expandtab

set colorcolumn=81

" Automatically set current dir
set autochdir

" Ctrl+v before { to avoid this remap
inoremap { {<CR>}<Esc>ko<tab>

filetype plugin indent on
